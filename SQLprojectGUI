    private void connectBtnActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
        try
        {
            Class.forName("org.apache.derby.jdbc.ClientDriver");
            JOptionPane.showMessageDialog(null, "Driver Connected");
            
            
            String ConnectURL ="jdbc:derby://localhost:1527/CityDB;create=true;user=root;password=sac123";
            Connection connect = DriverManager.getConnection(ConnectURL);
            stmt = connect.createStatement();
            JOptionPane.showMessageDialog(null, "Database Connected");
                               
        }
        catch (Exception ex)
        {
            System.out.println(ex);
        }
        
    }                                          

    private void showBtnActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        try {
            String queryString = "select * from pop";
            ResultSet rset = stmt.executeQuery(queryString);
            
           
            jTable1.setModel(DbUtils.resultSetToTableModel(rset));
            rset.close();
        }
        catch(Exception ex)
        {
            System.out.println(ex);
        }
          
        
        
    }                                       

    private void ascendingPopBtnActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
        
        try {
            String queryString = "select * from pop order by Population asc";
            ResultSet rset = stmt.executeQuery(queryString);
            
           
            jTable1.setModel(DbUtils.resultSetToTableModel(rset));
            rset.close();
        }
        catch(Exception ex)
        {
            System.out.println(ex);
        }
        
        
    }                                               

    private void descendingPopBtnActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // TODO add your handling code here:
        
        try {
            String queryString = "select * from pop order by Population desc";
            ResultSet rset = stmt.executeQuery(queryString);
            
           
            jTable1.setModel(DbUtils.resultSetToTableModel(rset));
            rset.close();
        }
        catch(Exception ex)
        {
            System.out.println(ex);
        }
        
        
    }                                                

    private void nameAlphabetizedBtnActionPerformed(java.awt.event.ActionEvent evt) {                                                    
        // TODO add your handling code here:
        try {
            String queryString = "select * from pop order by cityname asc";
            ResultSet rset = stmt.executeQuery(queryString);
            
           
            jTable1.setModel(DbUtils.resultSetToTableModel(rset));
            rset.close();
        }
        catch(Exception ex)
        {
            System.out.println(ex);
        }
        
        
    }                                                   

    private void totalPopBtnActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        try {
            String queryString = "select sum(population)as Totalpopulation from pop";
            ResultSet rset = stmt.executeQuery(queryString);
   
            jTable1.setModel(DbUtils.resultSetToTableModel(rset));
            
        }
        catch(Exception ex)
        {
            System.out.println(ex);
        }

    }                                           

    private void avgPopBtnActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
                try {
            String queryString = "select avg(population)as Averagepopulation from pop";
            ResultSet rset = stmt.executeQuery(queryString);
   
            jTable1.setModel(DbUtils.resultSetToTableModel(rset));
            
        }
        catch(Exception ex)
        {
            System.out.println(ex);
        }
     
    }                                         

    private void highestPopBtnActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
                try {
            String queryString = "select max(population)as Maxpopulation from pop";
            ResultSet rset = stmt.executeQuery(queryString);
   
            jTable1.setModel(DbUtils.resultSetToTableModel(rset));
            
        }
        catch(Exception ex)
        {
            System.out.println(ex);
        }
  
    }                                             

    private void lowestPopBtnActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
                try {
            String queryString = "select min(population)as Totalpopulation from pop";
            ResultSet rset = stmt.executeQuery(queryString);
   
            jTable1.setModel(DbUtils.resultSetToTableModel(rset));
            
        }
        catch(Exception ex)
        {
            System.out.println(ex);
        }

    }                                            

